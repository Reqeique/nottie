<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="createNewNote"
   >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        app:elevation="0dp"
        android:background="?attr/colorSurface"
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/f_n_t_n_pin_button"
                android:layout_marginEnd="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pin_selected_unselected"
                app:backgroundTint="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/f_n_t_n_add_button"
                app:layout_constraintEnd_toStartOf="@+id/f_n_t_n_add_button"
                app:layout_constraintTop_toTopOf="@+id/f_n_t_n_add_button" />
            <ImageView
                android:id="@+id/f_n_t_n_add_button"
                android:layout_width="24dp"

                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_add_24px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>
            <ImageView

                app:backgroundTint="?attr/colorPrimary"
                android:id="@+id/f_n_t_n_back_button"
                android:layout_width="24dp"

                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_round_arrow_back_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>
            <ImageView
                android:layout_marginBottom="16dp"
                app:backgroundTint="?attr/colorPrimary"

                android:id="@+id/f_n_t_n_save_button"
                android:visibility="gone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_round_done_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/editTextStyle"
            android:layout_margin="16dp"
            android:background="@drawable/custom2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                style="@style/editTextStyle2"

                android:id="@+id/f_n_t_n_title"


                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:fontFamily="@font/sofia_pro_regular"
                android:hint="Title"
                android:inputType="textMultiLine"
                android:maxHeight="75dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/root2" />

            <EditText
                android:fontFamily="@font/sofia_pro_regular"

                android:id="@+id/f_n_t_n_notes"
                style="@style/editTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:gravity="start"
                android:hint="Notes Here"
                android:inputType="textMultiLine"
                android:maxHeight="75dp"
                android:paddingBottom="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:textSize="16sp"

                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/f_n_t_n_title" />

            <EditText
                android:id="@+id/f_n_t_n_e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/f_n_t_n_notes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>