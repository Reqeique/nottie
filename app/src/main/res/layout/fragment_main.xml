<?xml version="1.0" encoding="utf-8" ?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:transitionName="f_m"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:backgroundTint="?attr/colorSurface"
        android:id="@+id/appbar"

        android:layout_height="250dp"
        android:layout_width="match_parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"

            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"

            app:toolbarId="@+id/toolbar">


            <androidx.appcompat.widget.Toolbar

                android:id="@+id/toolbar"
                android:layout_height="50dp"
                android:layout_width="match_parent">

                <TextView
                    android:fontFamily="@font/sofia_pro_bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/app_name"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.Toolbar>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="match_parent"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:paddingStart="12dp">

                <com.google.android.material.card.MaterialCardView

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"

                    android:id="@+id/fragment_main_search_card"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="2dp"
                    android:layout_width="match_parent"
                    android:transitionName="fragment_main_search_card_transition"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.appcompat.widget.SearchView
                        android:transitionName="f_m_s_t"

                        android:layout_height="50dp"
                        android:layout_width="match_parent"


                        app:commitIcon="@drawable/ic_baseline_arrow_back_ios_new_24"

                        app:tint="@color/black" />
                </com.google.android.material.card.MaterialCardView>


                <TextView

                    style="@style/secondaryTextStyle"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:id="@+id/textView3"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:text="JAN, 21"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/fragment_main_recycler_date_time"
                    app:layout_constraintStart_toStartOf="@+id/fragment_main_recycler_date_time" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_main_recycler_date_time"

                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:itemCount="10"
                    tools:listitem="@layout/rm_date_time" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <!--      android:backgroundTint="?attr/colorSurfaceSecondary"-->
    <androidx.core.widget.NestedScrollView
        android:background="@drawable/appbar_bg"
        android:backgroundTint="?attr/colorSurfaceTertiary"
        android:elevation="10dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"


        app:behavior_overlapTop="16dp"


        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root2"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_main_root_note"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_main_recycler_note"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chipGroup"
                    tools:listitem="@layout/rm_main_note_small" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2">

                    <com.google.android.material.chip.Chip


                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:fontFamily="@font/sofia_pro_regular"

                        android:id="@+id/chip5"

                        android:includeFontPadding="false"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="New"
                        android:textAppearance="@style/chipText"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="16sp" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:fontFamily="@font/sofia_pro_regular"

                        android:id="@+id/chip4"

                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Pinned"
                        android:textAppearance="@style/chipText"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="16sp" />
                </com.google.android.material.chip.ChipGroup>

                <ImageButton

                    style="ImageButton"
                    android:background="@null"
                    android:backgroundTint="?attr/colorPrimary"
                    android:id="@+id/fragment_main_open_note"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toTopOf="@+id/textView2"

                    app:srcCompat="@drawable/ic_round_chevron_right_24"
                    app:tint="?attr/colorPrimary" />

                <ImageButton
                    android:background="@null"
                    android:id="@+id/fragment_main_add_note"
                    android:layout_height="48dp"
                    android:layout_width="48dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView2"
                    app:srcCompat="@drawable/ic_add_24px" />


                <TextView
                    style="@style/secondaryTextStyle"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:id="@+id/textView2"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:text="ALL NOTE"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout


                android:id="@+id/fragment_main_root_collection"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_main_root_note">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/f_m_c_i_v"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="30dp"

                                   android:src="@drawable/collection"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />
                <TextView
                    android:visibility="gone"
                    style="@style/secondaryTextStyle"
                    android:fontFamily="@font/sofia_pro_bold"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@id/f_m_c_i_v"
                    app:layout_constraintStart_toStartOf="@id/f_m_c_i_v"
                    app:layout_constraintTop_toBottomOf="@id/f_m_c_i_v"
                    android:text="No Personal  Collection YET!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="visible"
                    android:id="@+id/fragment_main_recycler_collection"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    tools:listitem="@layout/rm_main_collection_small" />


                <ImageButton
                    android:transitionName="f_m_o_c_t"

                    style="ImageButton"
                    android:background="@null"
                    android:backgroundTint="?attr/colorPrimary"
                    android:id="@+id/fragment_main_open_collection"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/textView5"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="@+id/textView5"
                    app:srcCompat="@drawable/ic_round_chevron_right_24"
                    app:tint="?attr/colorPrimary" />

                <ImageButton
                    android:background="@null"
                    android:id="@+id/fragment_main_add_collection"
                    android:layout_height="48dp"
                    android:layout_width="48dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView5"
                    app:srcCompat="@drawable/ic_add_24px" />


                <TextView


                    style="@style/secondaryTextStyle"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:id="@+id/textView5"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:text="COLLECTION"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@id/fragment_main_root_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:transitionName="f_m_o_a_t"

                    style="ImageButton"
                    android:background="@null"
                    android:backgroundTint="?attr/colorPrimary"
                    android:id="@+id/fragment_main_open_archive"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/textView51"
                    app:layout_constraintStart_toEndOf="@id/textView51"
                    app:layout_constraintTop_toTopOf="@id/textView51"
                    app:srcCompat="@drawable/ic_round_chevron_right_24"
                    app:tint="?attr/colorPrimary" />

                <TextView


                    style="@style/secondaryTextStyle"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:id="@+id/textView51"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:text="ARCHIVE"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView


                    app:layout_constraintTop_toBottomOf="@id/textView51"
                    app:srcCompat="@drawable/archive"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>