<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nottie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fontFamily">@font/sofia_pro_bold</item>

        <!-- Primary brand color. -->
        <item name="colorSurfaceTertiary">?attr/colorSurfaceSecondary</item>
        <item name="colorTertiary">?attr/colorOnSecondary</item>
        <item name="colorAccent">@color/gray_00</item>
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColor">@color/blue_200</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_00</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_200</item>
        <item name="colorSurfaceSecondary">@color/gray_01</item>
        <item name="colorSurface">@color/gray_00</item>
        <item name="android:textColorSecondary">@color/lightSecondaryTextColor</item>
        <item name="android:navigationBarColor">@color/gray_00</item>

        <!-- Status bar color. -->

        <!-- Customize your theme here. -->

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="collectionStyle">@color/lightTertiaryTextColor</item>
    </style>
    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#D3D3D3</item>
        <item name="android:fontFamily">@font/sofia_pro_regular</item>
    </style>
    <style name="tertiaryTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/lightTertiaryTextColor</item>
        <item name="android:fontFamily">@font/sofia_pro_regular</item>
    </style>
    <style name="tertiaryIconStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/lightTertiaryTextColor</item>
    </style>
    <style name="secondaryTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/lightSecondaryTextColor</item>
        <item name="android:fontFamily">@font/sofia_pro_regular</item>
    </style>
    <style name="secondaryTextStyleOpposite" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/darkSecondaryTextColor</item>
        <item name="android:fontFamily">@font/sofia_pro_regular</item>
    </style>
    <style name="appbarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/gray_01</item>
    </style>
    <style name="primaryTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sofia_pro_regular</item>
    </style>
    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/gray_01</item>
        <item name="android:textColor">@color/lightSecondaryTextColor</item>

    </style>
    <style name="editTextStyleCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/gray_01</item>
    </style>
    <style name="mainFragStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:navigationBarColor">@color/gray_01</item>
        <item name="colorAccent">@color/gray_00</item>
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColor">@color/blue_200</item>
        <item name="windowNoTitle">true</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_200</item><item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/gray_00</item>
        <item name="android:textColorSecondary">@color/lightSecondaryTextColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_01</item>
        <!-- Customize your theme here. -->

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
    <style name="editTextStyle2" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/lightSecondaryTextColor</item>
        <item name="android:backgroundTint">@color/gray_01</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:navigationBarColor">@color/gray_02</item>

        <item name="bottomSheetStyle">@style/appBottomSheetStyle</item>
    </style>
    <style name="appBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:elevation">0dp</item>
        <item name="android:backgroundTint">@color/gray_02</item>
        <item name="android:background">@drawable/ic_bg_main</item>
    </style>
</resources>